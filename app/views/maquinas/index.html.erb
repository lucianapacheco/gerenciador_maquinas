<style>
  
  html {
    font-family: Arial;
    font-size: 16px;
    background: #DCDCDC;    
  }
  .sidebar {
    position: fixed;
    width: 25%;
    height: 100vh;
    background: #312450;
    font-size: 35px;
    text-align: center;
  }
  .home{
    padding-top: 80px;
  }
  .maquinas {
    position: relative;
    width: 75%;
    float: right;
    height: 100vh;
    
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
    }
  }
  footer{
    margin-top: 17%;   
    bottom:0;
    width:100%;
  }
  
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">

<main class="main">

  <aside class="sidebar">
    <div class="home">
      <a href="http://localhost:3000/maquinas" style="color:#DCDCDC">HOME</a>
    </div>
    <hr style="background: #DCDCDC">
  </aside>

  <section class="maquinas">
    <div id="main" class="container-fluid">

      <p id="notice"><%= notice %></p>

      <h1>Máquinas</h1>

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Meses de garantia</th>
            <th>Data da compra</th>
            <th>Quebrada</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @maquinas.each do |maquina| %>
            <tr>
              <td><%= maquina.tipo %></td>
              <td><%= maquina.nome %></td>
              <td><%= maquina.descricao %></td>
              <td><%= maquina.garantia %></td>
              <td><%= maquina.compra %></td>
              <td> <%= maquina.quebrada %></td>

              <td> <%= link_to 'Visualizar', maquina, class:"btn btn-success" %></td> 
              <td> <%= link_to 'Alterar', edit_maquina_path(maquina), class:"btn btn-warning" %></td> 
              <td> <%= link_to 'Remover', maquina, method: :delete, data: { confirm: 'Tem certeza que deseja remover?' }, class:"btn btn-danger" %></td> 
              
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>

      <%= link_to 'Adicionar Máquina', new_maquina_path, class:"btn btn-primary mb-4"  %> 
      
    </div>
      <!-- Footer -->
      <footer 
              class="footer navbar-fixed-bottom text-center text-lg-start text-white " 
              style="background-color: #45526e"
              >
        <!-- Grid container -->
        <div class="container p-5 pb-0">
          <!-- Section: Links -->
          <section>
            <!--Grid row-->
            <div class="row">
              <!-- Grid column -->
              <div class="col-md-3 col-lg-3 col-xl-3 mx-auto ">
                <h6 class="text-uppercase mb-4 font-weight-bold">
                  Roadmapps
                </h6>
                <p>
                Quero a vaga! |O|
                </p>
              </div>
              <!-- Grid column -->

              <hr class="w-100 clearfix d-md-none" />

              <!-- Grid column -->
              <div class="col-md-2 col-lg-2 col-xl-2 mx-auto">
                <h6 class="text-uppercase mb-4 font-weight-bold" href="#">Produtos</h6>
                <p>
                  <a class="text-white" href="http://localhost:3000/maquinas">Máquinas</a>
                </p>
                <p>
                  <a class="text-white" href="#">Acessórios</a>
                </p>
              
              </div>
              <!-- Grid column -->

              <hr class="w-100 clearfix d-md-none" />

              <!-- Grid column -->
              <div class="col-md-3 col-lg-2 col-xl-2 mx-auto ">
                <h6 class="text-uppercase mb-4 font-weight-bold">
                  Links Úteis
                </h6>
                <p>
                  <a class="text-white" href="#">Sua Conta</a>
                </p>
                <p>
                  <a class="text-white" href="#">Torne-se Membro</a>
                </p>
            
              </div>

              <!-- Grid column -->
              <hr class="w-100 clearfix d-md-none" />

              <!-- Grid column -->
              <div class="col-md-4 col-lg-3 col-xl-3 mx-auto ">
                <h6 class="text-uppercase mb-4 font-weight-bold">Contato</h6>
                <p><i class="fas fa-home mr-3"></i> R. do Bom Jesus, 125 - Recife </p>

                  <a class="btn btn-outline-light btn-floating " class="text-white" role="button" href="https://www.rdmapps.com.br/">
                  <i class="fas fa-building"></i> </a>

                <!-- GitHub -->
                <a class="btn btn-outline-light btn-floating text-white" role="button" href="https://github.com/lucianapacheco" >
                  <i class="fab fa-github"> </i>
                </a>
              </div>
              <!-- Grid column -->
            </div>
            <!--Grid row-->
          </section>
        </div>
        <!-- Grid container -->
      </footer>
      <!-- Footer -->
  </section>
</main>





